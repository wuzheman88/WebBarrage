{
  "manifest_version": 2,

  "name": "Global Danmu",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.ico",
    "default_popup": "popup.html"
  },
  "background":
  {
    "page": "popup.html"
  },
  "chrome_url_overrides":
  {
    "newtab": "popup.html"
  },
  "options_ui":
  {
    "page": "popup.html",
    "chrome_style": true
  },
  "devtools_page": "popup.html",
  "omnibox": { "keyword" : "go" },
  "web_accessible_resources": ["js/inject.js"],
  "content_scripts": 
  [
      {
          "matches": ["<all_urls>"],
          "js": ["js/barrage.js", "js/content-script.js"],
          "css": ["css/custom.css"],
          "run_at": "document_start"
      }
  ]
}